<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.practice.vediorecorderapplication.MainActivity">

    <ListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:visibility="gone"
            android:id="@+id/press_to_recording"
            android:background="#3EAF0E"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:minHeight="1dp"
            android:layout_margin="4dp"
            android:text="@string/press_to_recording" />

        <!--<Button
            android:id="@+id/press_to_recording_and_screen"
            android:background="#3EAF0E"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:minHeight="1dp"
            android:layout_margin="4dp"
            android:text="@string/press_to_recording_and_screen" />-->
        <Button
            android:id="@+id/press_to_recording_and_screen"
            android:background="#3EAF0E"
            android:textColor="#fff"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:minHeight="1dp"
            android:layout_margin="4dp"
            android:text="@string/press_to_recording_and_screen" />
        <Button
            android:id="@+id/press_to_recording_screen"
            android:background="#3EAF0E"
            android:textColor="#fff"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:minHeight="1dp"
            android:layout_margin="4dp"
            android:text="@string/press_to_recording_screen" />
        <!--<Button
            android:id="@+id/press_to_recording_screen"
            android:background="#3EAF0E"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:minHeight="1dp"
            android:layout_margin="4dp"
            android:text="@string/press_to_recording_screen" />-->

        <Button
            android:visibility="gone"
            android:id="@+id/press_to_recordingVideo"
            android:background="#3EAF0E"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:minHeight="1dp"
            android:layout_margin="4dp"
            android:text="@string/press_to_recordingVideo" />
    </LinearLayout>

</RelativeLayout>
